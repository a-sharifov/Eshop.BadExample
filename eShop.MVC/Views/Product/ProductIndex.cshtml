@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<form>
    <br />
    <br />
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary black-text">Products</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Create New Product</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Brand
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Price
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            @product.Name
                        </td>
                        <td>
                            @product.ProductBrand.Brand
                        </td>
                        <td>
                            @product.ProductType.Type
                        </td>
                        <td>
                            @((product.Price).ToString("c"))
                        </td>
                     
                        <td>
                            <a asp-action="ProductUpdate" class="btn btn-success" asp-route-productId="@product.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@product.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>